<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_widget"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_app_name"
        android:text="@string/mark_note"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="#a0000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#90000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_launch_app"
            android:layout_width="56dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/icon_selector"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_launcher_round" />

        <ImageView
            android:id="@+id/iv_add_note"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_selector"
            android:layout_gravity="center_vertical"
            android:tint="@android:color/white"
            android:src="@drawable/ic_description_black_24dp" />

        <ImageView
            android:id="@+id/iv_add_mind"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_selector"
            android:layout_gravity="center_vertical"
            android:tint="@android:color/white"
            android:src="@drawable/ic_lightbulb_outline_black_24dp" />

        <ImageView
            android:id="@+id/iv_add_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_selector"
            android:layout_gravity="center_vertical"
            android:tint="@android:color/white"
            android:src="@drawable/ic_add_a_photo_white" />

        <ImageView
            android:id="@+id/iv_add_sketch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_selector"
            android:layout_gravity="center_vertical"
            android:tint="@android:color/white"
            android:src="@drawable/ic_gesture_grey_24dp" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:background="@drawable/icon_selector"
            android:layout_gravity="center_vertical"
            android:tint="@android:color/white"
            android:src="@drawable/ic_settings_black" />

    </LinearLayout>

</LinearLayout>